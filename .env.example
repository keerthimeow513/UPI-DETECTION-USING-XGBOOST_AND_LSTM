# Environment Configuration for UPI Fraud Detection System
# Copy this file to .env and customize values for your environment

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000

# =============================================================================
# Environment Settings
# =============================================================================
ENVIRONMENT=development

# =============================================================================
# CORS Configuration
# Comma-separated list of allowed origins for cross-origin requests
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Rate Limiting Configuration
# RATE_LIMIT_REQUESTS: Maximum number of requests allowed
# RATE_LIMIT_PERIOD: Time period in seconds
# =============================================================================
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60

# =============================================================================
# Model Configuration
# Path to model artifacts directory (relative to project root)
# =============================================================================
MODEL_PATH=02_models/artifacts/

# =============================================================================
# Logging Configuration
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Redis Configuration
# Used for caching user history and rate limiting
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Feature Store Configuration
# Enable Redis-based feature store for real user transaction history
# This replaces the mocked LSTM history with actual user behavior
# =============================================================================
FEATURE_STORE_ENABLED=true

# =============================================================================
# Security Configuration
# IMPORTANT: Change this in production! Use a strong, random secret key.
# Generate with: openssl rand -hex 32
# =============================================================================
API_KEY_SECRET=your-secret-key-here

# =============================================================================
# Transaction Limits
# Maximum allowed transaction amount in INR (paise)
# Default: 10000000 (â‚¹100,000)
# =============================================================================
MAX_TRANSACTION_AMOUNT=10000000
