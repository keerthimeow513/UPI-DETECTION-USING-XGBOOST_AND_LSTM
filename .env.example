# =============================================================================
# UPI Fraud Detection - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="UPI Fraud Detection"
APP_VERSION="2.0.0"
APP_ENV="development"  # development, staging, production
DEBUG=true
SECRET_KEY="your-secret-key-here-change-in-production"

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
API_TITLE="UPI Fraud Detection API"
API_VERSION="1.0.0"
API_DESCRIPTION="Hybrid AI-based real-time UPI fraud detection system"

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# SQLite (development)
DATABASE_URL="sqlite:///./data/fraud_detection.db"

# PostgreSQL (production)
# DATABASE_URL="postgresql://user:password@localhost:5432/upi_fraud"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# JWT Authentication
JWT_SECRET_KEY="your-jwt-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TIME_WINDOW=60  # seconds

# Password Hashing
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# Model paths
MODEL_DIR="./models"
DETECTION_MODEL_PATH="./models/fraud_detection_model.pkl"
XGBOOST_MODEL_PATH="./models/xgboost_model.json"
TENSORFLOW_MODEL_PATH="./models/tensorflow_model.h5"

# Model settings
MODEL_CONFIDENCE_THRESHOLD=0.75
MAX_FEATURES=50
FEATURE_ENGINEERING_ENABLED=true

# -----------------------------------------------------------------------------
# Fraud Detection Rules
# -----------------------------------------------------------------------------
# Thresholds
HIGH_RISK_THRESHOLD=0.85
MEDIUM_RISK_THRESHOLD=0.60
LOW_RISK_THRESHOLD=0.40

# Transaction limits
MAX_TRANSACTION_AMOUNT=100000
SUSPICIOUS_AMOUNT_THRESHOLD=50000
VELOCITY_CHECK_WINDOW_MINUTES=60
MAX_TRANSACTIONS_PER_WINDOW=10

# Geographic risk
ENABLE_GEOGRAPHIC_RISK=true
BLOCKED_STATES=""

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_DIR="./logs"
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# -----------------------------------------------------------------------------
# Dashboard Configuration
# -----------------------------------------------------------------------------
DASHBOARD_HOST="0.0.0.0"
DASHBOARD_PORT=8501
DASHBOARD_THEME="dark"
ENABLE_AUTH=true

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
# Email Service (for alerts)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@upifraudshield.com"

# SMS Service (for alerts)
SMS_API_URL="https://sms.example.com/api"
SMS_API_KEY=""

# -----------------------------------------------------------------------------
# Data Processing
# -----------------------------------------------------------------------------
DATA_DIR="./data"
RAW_DATA_DIR="./data/raw"
PROCESSED_DATA_DIR="./data/processed"
OUTPUT_DIR="./output"
BATCH_SIZE=1000

# -----------------------------------------------------------------------------
# Feature Store Configuration
# -----------------------------------------------------------------------------
ENABLE_FEATURE_STORE=false
FEATURE_STORE_REFRESH_INTERVAL=300  # seconds

# -----------------------------------------------------------------------------
# Monitoring & Metrics
# -----------------------------------------------------------------------------
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
CORS_ORIGINS="http://localhost:3000,http://localhost:8501"
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Cache Settings
# -----------------------------------------------------------------------------
CACHE_TTL=3600  # seconds
ENABLE_CACHING=true
CACHE_TYPE="redis"  # redis, memory

# -----------------------------------------------------------------------------
# Email Alerts
# -----------------------------------------------------------------------------
ALERT_EMAIL_ENABLED=false
ALERT_RECIPIENTS="admin@upifraudshield.com"
ALERT_HIGH_RISK_ONLY=false
DAILY_SUMMARY_ENABLED=true

# -----------------------------------------------------------------------------
# Integration Settings
# -----------------------------------------------------------------------------
# UPI Gateway Integration (if applicable)
UPI_GATEWAY_URL=""
UPI_API_KEY=""
UPI_API_SECRET=""

# Webhook Configuration
WEBHOOK_URL=""
WEBHOOK_SECRET=""
WEBHOOK_ENABLED=false

# -----------------------------------------------------------------------------
# Performance Settings
# -----------------------------------------------------------------------------
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30  # seconds
ENABLE_ASYNC_PROCESSING=true
